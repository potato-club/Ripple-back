  "components": {
    "schemas": {
      "SignupRequestDto": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[a-zA-Z0-9_]{3,20}$"
          },
          "email": {
            "type": "string",
            "minLength": 1
          },
          "password": {
            "type": "string",
            "maxLength": 72,
            "minLength": 8
          }
        },
        "required": [
          "email",
          "password",
          "username"
        ]
      },
      "SignupResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "username": {
            "type": "string"
          },
          "emailVerified": {
            "type": "boolean"
          }
        }
      },
      "FollowResponseDto": {
        "type": "object",
        "properties": {
          "fromUserId": {
            "type": "integer",
            "format": "int64"
          },
          "toUserId": {
            "type": "integer",
            "format": "int64"
          },
          "following": {
            "type": "boolean"
          }
        }
      },
      "BlockResponseDto": {
        "type": "object",
        "properties": {
          "fromUserId": {
            "type": "integer",
            "format": "int64"
          },
          "toUserId": {
            "type": "integer",
            "format": "int64"
          },
          "blocked": {
            "type": "boolean"
          }
        }
      },
      "EmailVerificationVerifyRequestDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "minLength": 1
          },
          "code": {
            "type": "string",
            "maxLength": 6,
            "minLength": 6
          }
        },
        "required": [
          "code",
          "email"
        ]
      },
      "EmailVerificationSendRequestDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": [
          "email"
        ]
      },
      "TokenRequestDto": {
        "type": "object",
        "properties": {
          "refreshToken": {
            "type": "string",
            "minLength": 1
          },
          "deviceId": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": [
          "deviceId",
          "refreshToken"
        ]
      },
      "TokenResponseDto": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string"
          },
          "refreshToken": {
            "type": "string"
          }
        }
      },
      "LoginRequestDto": {
        "type": "object",
        "properties": {
